#!/bin/bash

# PHPUnit Test Runner with Clean Output
# Filters PHPUnit 9.5 deprecation warnings on PHP 8.4

# Run PHPUnit and filter out deprecation lines
php -d error_reporting=32757 ./bin/phpunit "$@" 2>&1 | grep -v "^Deprecated:" | grep -v "E_STRICT is deprecated"

# Preserve exit code
exit ${PIPESTATUS[0]}

