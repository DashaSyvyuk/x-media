<div id="cart-block">
    <div id="close-cart"><img src="/images/close.png"></div>
    {% if products|length > 0 %}
        <p class="title">Кошик (<span>{{ totalCount }}</span>)</p>
        <div class="inner">
            <table>
                <tr>
                    <td class="product-name bold">Назва</td>
                    <td class="price bold">Ціна</td>
                    <td class="total-count bold">Кількість</td>
                    <td class="remove bold">Видалити</td>
                </tr>
                {% for product in products %}
                    <tr data-id="{{ product.id }}" data-name="{{ product.title }}" class="product-row">
                        <td class="product-name">
                            <div class="product-title">
                                <img src="/{% if product.images|length > 0 %}{{ product.images[0].imageUrl }}{% endif %}" />
                                <div>{{ product.title }}</div>
                            </div>
                        </td>
                        <td class="price"><span>{{ product.price|number_format(0, '.', ' ') }}</span> грн</td>
                        <td class="total-count">
                            <div class="count">
                                <span class="minus">-</span>
                                <input type="text" name="count" value="{{ product.count }}" onkeypress="return event.charCode >= 48 && event.charCode <= 57" autocomplete="off">
                                <span class="plus">+</span>
                            </div>
                        </td>
                        <td class="remove"><img class="delete" src="/images/delete.png"></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <p class="total-price">Загальна вартість: <span>{{ totalPrice|number_format(0, '.', ' ') }} грн</span></p>
        <div id="go-to-order"><a class="green-button" href="/order-create">Перейти до оформлення замовлення</a></div>
    {% else %}
        <p>Ви ще не додали товари в корзину</p>
    {% endif %}
</div>
