{% extends "base.html.twig" %}

{% block javascripts %}
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
    <div id="slider">
        {% for slider in sliders %}
            <div class="item">
                <div class="background"><img src="{{ slider.imageUrl }}"></div>
                <a class="link button" href="{{ slider.url }}">{{ slider.title }}&nbsp;&nbsp;&nbsp;&#8594;</a>
            </div>
        {% endfor %}
    </div>
    <div id="menu">
        <div id="logo"><a href="/">X-media</a></div>
        <div id="categories">
            <ul>
                {% for category in categories %}
                    <li>
                        <a href="/{{ category.slug }}">{{ category.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div id="search">
            <form>
                <input type="text" name="search" autocomplete="off">
                <button type="submit"><img src="/images/search.png" /></button>
            </form>
        </div>
        <div id="cart"></div>
    </div>
    <section>
        <p class="title">Новинки</p>
        <div id="new-products">
            {% for product in products %}
                <div class="product">
                    <div class="inner">
                        <img src="{{ product.images[0].imageUrl }}">
                        <div class="product-title"><a href="/">{{ product.title }}</a></div>
                        <div class="price">{{ product.price }} грн</div>
                        <div class="add2cart"></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
