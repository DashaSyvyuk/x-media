{% extends "base.html.twig" %}

{% block javascripts %}
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
    <div id="slider">
        {% for slider in sliders %}
            <div class="item">
                <div class="background"><img src="{{ slider.imageUrl }}"></div>
                <a class="link" href="{{ slider.url }}">{{ slider.title }}&nbsp;&nbsp;&nbsp;&#8594;</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
