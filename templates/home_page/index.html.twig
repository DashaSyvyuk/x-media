{% extends "base.html.twig" %}

{% block javascripts %}
    {{ encore_entry_script_tags('home') }}
    {{ encore_entry_script_tags('cart') }}
{% endblock %}

{% block body %}
    <div class="home-page">
        <div id="slider">
            {% for slider in sliders %}
                <div class="item">
                    <div class="background"><img src="{{ slider.imageUrl }}"></div>
                    <a class="link button" href="{{ slider.url }}">{{ slider.title }}&nbsp;&nbsp;&nbsp;&#8594;</a>
                </div>
            {% endfor %}
        </div>

        {% include 'partials/header.html.twig' %}

        <section>
            <p class="title">Новинки</p>
            <div id="new-products">
                {% for product in products %}
                    {% include 'partials/product-item.html.twig' %}
                {% endfor %}
            </div>
        </section>

        {% if feedbacks|length > 0 %}
        <section>
            <p class="title">Відгуки про магазин</p>
            <div id="feedbacks">
                {% for feedback in feedbacks %}
                    <div class="feedback">
                        <div class="inner">
                            <div class="author">{{ feedback.author }}:</div>
                            <div class="date">{{ feedback.createdAt.format('Y-m-d H:i:s') }}</div>
                            <div class="text">{{ feedback.comment }}</div>
                            {% if feedback.answer|length > 0 %}
                                <div class="answer">
                                    <div class="author">X-media:</div>
                                    <div class="text">{{ feedback.answer }}</div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div id="feedback-buttons">
                <a href="/feedbacks#add">Додати відгук</a>
                <a href="/feedbacks">Переглянути відгуки</a>
            </div>
        </section>
        {% endif %}
    </div>
{% endblock %}
