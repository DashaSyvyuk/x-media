{% extends "base.html.twig" %}

{% block javascripts %}
    {{ encore_entry_script_tags('cart') }}
    {{ encore_entry_script_tags('update_password') }}
{% endblock %}

{% block body %}

    <header>
        {% include 'partials/header.html.twig' %}
    </header>

    <section>
        <div class="title">Зміна паролю</div>

        <div class="breadcrumb">
            <a>X-media</a>
            <span> > </span>
            <a href="/">Головна</a>
            <span> > </span>
            <a class="selected">Зміна паролю</a>
        </div>

        <form method="POST" action="/update-password" id="update-password">
            <div class="password">
                <p>Пароль:</p>
                <input type="password" name="password" autocomplete="off" required>
                <p class="error"></p>
            </div>

            <div class="password2">
                <p>Повторіть пароль:</p>
                <input type="password" name="password2" autocomplete="off" required>
                <p class="error"></p>
            </div>

            <div>
                <input class="green-button" type="submit" value="Оновити">
            </div>
        </form>
    </section>

{% endblock %}
