{% extends 'm.base.html.twig' %}

{% block javascripts %}
    {{ encore_entry_script_tags('cart') }}
    {{ encore_entry_script_tags('restore_password') }}
    {{ encore_entry_script_tags('app_mobile') }}
{% endblock %}

{% block body %}

<section>
    <div class="breadcrumb">
        <a class="image" href="/login">
            <img src="/images/arrow_navigate.png">
        </a>
        <span>Відновлення паролю</span>
    </div>

    <form method="POST" action="/restore-password" id="restore-password">
        <div class="email">
            <p>Email:</p>
            <input type="text" name="email" autocomplete="off" required>
            <p class="error"></p>
        </div>

        <div>
            <input class="green-button" type="submit" value="Відправити">
        </div>
    </form>
</section>

{% endblock %}
