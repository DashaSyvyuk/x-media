{% extends 'm.base.html.twig' %}

{% block javascripts %}
    {{ encore_entry_script_tags('cart') }}
    {{ encore_entry_script_tags('account') }}
    {{ encore_entry_script_tags('app_mobile') }}
{% endblock %}

{% block body %}

<section>
    <div class="account">
        <ul class="left-side">
            <li class="open"><a href="/account"><img src="/images/home.png"><span>Особистий<br>кабінет</span></a></li>
            <li><a href="/account/contacts"><img src="/images/setting.png"><span>Контактні<br>дані</span></a></li>
            <li><a href="/account/orders"><img src="/images/list.png"><span>Мої<br>замовлення</span></a></li>
            <li><a id="logout"><img src="/images/log_out.png"><span>Вийти</span></a></li>
        </ul>
        <div class="main-part">
            <h4>Особистий кабінет:</h4>

            {% if order %}
                <h5>Останнє активне замовлення:</h5>
            {% endif %}

            <ul class="my-orders">
                {% if order %}
                    <li>
                        <div class="detail">
                            <p><b class="gray">{{ order.status }}</b></p><br>
                            <p class="gray margin-bottom-2">{{ order.createdAt.format('Y-m-d H:i:s') }}</p>
                            <p class="gray">{{ order.orderNumber }}</p><br>
                            <p><b>{{ order.total|number_format(0, ',', ' ') }} грн</b></p>
                        </div>
                        <table class="products">
                            {% for item in order.items %}
                                <tr>
                                    <td class="image"><a href="/products/{{ item.product.id }}" target="_blank"><img src="/{{ item.product.getImages()[0].imageUrl }}"></a></td>
                                    <td><a href="/products/{{ item.product.id }}" target="_blank">{{ item.product.title }}</a></td>
                                </tr>
                            {% endfor %}
                        </table>
                    </li>
                {% else %}
                    <p>{{ noOrder.getValue() }}</p>
                {% endif %}
            </ul>
        </div>
    </div>
</section>

{% endblock %}
