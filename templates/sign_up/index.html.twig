{% extends "base.html.twig" %}

{% block javascripts %}
    {{ encore_entry_script_tags('cart') }}
    {{ encore_entry_script_tags('sign_up') }}
{% endblock %}

{% block body %}

    <header>
        {% include 'partials/header.html.twig' %}
    </header>

    <section>
        <div class="title">Реєстрація</div>

        <div class="breadcrumb">
            <a class="no-link-style">x-media</a>
            <span>&nbsp;> </span>
            <a href="/">Головна</a>
            <span> > </span>
            <a class="selected">Реєстрація</a>
        </div>

        <form method="POST" action="/sign_up" id="sign_up">
            <div>
                <p>Ім'я: <span class="required">*</span></p>
                <input type="text" name="name" autocomplete="off" required>
            </div>
            <div>
                <p>Прізвище:</p>
                <input type="text" name="surname" autocomplete="off">
            </div>
            <div>
                <p>Номер телефону: <span class="required">*</span></p>
                <input type="text" name="phone" autocomplete="off" required>
            </div>
            <div class="email">
                <p>E-mail: <span class="required">*</span></p>
                <input type="text" name="email" autocomplete="off" required>
                <p class="error"></p>
            </div>
            <div class="password">
                <p>Пароль: <span class="required">*</span></p>
                <input type="password" name="password" autocomplete="off" required>
                <p class="error"></p>
            </div>
            <div class="password_confirm">
                <p>Повторіть пароль: <span class="required">*</span></p>
                <input type="password" name="password_confirm" autocomplete="off" required>
                <p class="error"></p>
            </div>

            <div>
                <input class="green-button" type="submit" value="Реєструватися">
            </div>
        </form>
    </section>

{% endblock %}
