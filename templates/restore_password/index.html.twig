{% extends "base.html.twig" %}

{% block javascripts %}
    {{ encore_entry_script_tags('cart') }}
    {{ encore_entry_script_tags('restore_password') }}
{% endblock %}

{% block body %}

    <header>
        {% include 'partials/header.html.twig' %}
    </header>

    <section>
        <div class="title">Відновлення пароля</div>

        <div class="breadcrumb">
            <a class="no-link-style">x-media</a>
            <span>&nbsp;> </span>
            <a href="/">Головна</a>
            <span> > </span>
            <a class="selected">Відновлення пароля</a>
        </div>

        <form method="POST" action="/restore-password" id="restore-password">
            <div class="email">
                <p>Email:</p>
                <input type="text" name="email" autocomplete="off" required>
                <p class="error hide"></p>
            </div>

            <div>
                <input class="green-button" type="submit" value="Відправити">
            </div>
        </form>
    </section>

{% endblock %}
