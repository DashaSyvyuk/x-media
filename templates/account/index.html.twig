{% extends "base.html.twig" %}

{% block javascripts %}
    {{ encore_entry_script_tags('cart') }}
    {{ encore_entry_script_tags('account') }}
{% endblock %}

{% block body %}

    <header>
        {% include 'partials/header.html.twig' %}
    </header>

    <section>
        <div class="title">Особистий кабінет</div>

        <div class="account">
            <ul class="left-side">
                <li><a href="/account"><img src="/images/home.png"><span><b>Головна сторінка</b></span></a></li>
                <li><a href="/account/contacts"><img src="/images/setting.png"><span>Контактні дані</span></a></li>
                <li><a href="/account/orders"><img src="/images/list.png">Мої замовлення</a></li>
                <li><a id="logout"><img src="/images/log_out.png">Вийти</a></li>
            </ul>
            <div class="main-part">
                <h4>Головна сторінка:</h4>

                <ul class="my-orders">
                    {% if order %}
                    <h5>Останнє активне замовлення:</h5>
                    <li>
                        <div class="detail">
                            <p><b>Дата:</b> {{ order.createdAt.format('Y-m-d H:i:s') }}</p>
                            <p><b>Статус:</b> {{ order.status }}</p>
                        </div>
                        <table class="products">
                            {% for item in order.items %}
                                <tr>
                                    <td width="120"><a href="/products/{{ item.product.id }}" target="_blank"><img src="/{{ item.product.getImages()[0].imageUrl }}"></a></td>
                                    <td><a href="/products/{{ item.product.id }}" target="_blank">{{ item.product.title }}</a></td>
                                    <td>{{ item.count }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </li>
                    {% else %}
                        <p>{{ noOrder.getValue() }}</p>
                    {% endif %}
                </ul>
            </div>
        </div>
    </section>

{% endblock %}
